{
  "name": "crumbl-js",
  "version": "3.0.4",
  "description": "Secure data storage with trusted third-parties to use in Javascript environment",
  "main": "dist/lib/src/typescript/index.js",
  "types": "dist/lib/src/typescript/index.d.ts",
  "scripts": {
    "build": "eslint lib --ext .ts && tsc",
    "fix": "eslint lib --ext .ts --fix",
    "test": "tsc && browserify $(find ./dist/test/src/typescript -type f -name \"*.js\") -o dist/test/index.js && live-server --port=9001 --mount=/:test/src",
    "fix-test": "eslint test --ext .ts --fix",
    "single-test-on-windows-to-adapt": "tsc && browserify ./dist/test/src/typescript/Hasher/index.spec.js -o dist/test/index.js && live-server --port=9001 --mount=/:test/src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgewhere/crumbl-js.git"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "crumbl",
    "data protection",
    "secure storage",
    "third-party",
    "data masking"
  ],
  "author": "Edgewhere <cdever@edgewhere.fr>",
  "license": "BSD-2-Clause-Patent",
  "bugs": {
    "url": "https://github.com/edgewhere/crumbl-js/issues"
  },
  "homepage": "https://github.com/edgewhere/crumbl-js#readme",
  "devDependencies": {
    "@types/buffer-xor": "^2.0.0",
    "@types/chai": "^4.2.9",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.36",
    "@types/seedrandom": "^2.4.28",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "browserify": "^16.5.0",
    "buffer-xor": "^2.0.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ecies-geth": "^1.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-no-loops": "0.3.0",
    "eslint-plugin-react": "7.18.3",
    "feistel-cipher": "^1.0.3",
    "live-server": "^1.2.1",
    "mocha": "^6.2.2",
    "seedrandom": "3.0.5",
    "ts-node": "^8.6.2",
    "typescript": "3.8.3"
  },
  "peerDependencies": {
    "buffer-xor": "^2.0.2",
    "ecies-geth": "^1.1.0",
